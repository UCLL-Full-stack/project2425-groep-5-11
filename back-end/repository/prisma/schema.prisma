generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int   @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
//   reviews   Review[]
}

model Account {
    id        Int   @id @default(autoincrement())
    userId    Int
    bio       String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

